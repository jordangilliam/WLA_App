# WLA App Environment Variables Template
# Copy this to .env.local for local development
# DO NOT commit .env.local to GitHub!

# ===================================
# SUPABASE (DATABASE) - REQUIRED
# ===================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===================================
# CORE AUTHENTICATION
# ===================================
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000
CRON_SECRET=your-cron-secret-here

# ===================================
# GOOGLE OAUTH & APIS
# ===================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_SHEETS_ID=your-google-sheets-id
GOOGLE_SHEETS_RANGE=Sheet1!A1

# ===================================
# MICROSOFT AZURE AD & ONEDRIVE
# ===================================
AZURE_AD_CLIENT_ID=your-azure-client-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_TENANT_ID=common
ONEDRIVE_WORKBOOK_PATH=WLA/Admin/Reports/admin.xlsx
ONEDRIVE_TABLE_NAME=Sessions

# ===================================
# MAPBOX
# ===================================
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# ===================================
# STRIPE (PAYMENTS) - OPTIONAL
# ===================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===================================
# RATE LIMITING - OPTIONAL
# ===================================
# Upstash Redis for API rate limiting
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ===================================
# MONITORING & ANALYTICS - OPTIONAL
# ===================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_FIREBASE_CONFIG='{"apiKey":"...","authDomain":"...","projectId":"..."}'

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_PAYMENTS=false
ENABLE_AI_FEATURES=true
ENABLE_ADMIN_DASHBOARD=true

# ===================================
# CITIZEN SCIENCE MEDIA
# ===================================
OBSERVATION_MEDIA_BUCKET=observations

# ===================================
# AI PROVIDERS (OPTIONAL)
# ===================================
INATURALIST_CLIENT_ID=
INATURALIST_CLIENT_SECRET=
BIRDWEATHER_API_KEY=
BIRDWEATHER_API_URL=https://api.birdweather.com/v1/identify
MACRO_API_KEY=
MACRO_API_URL=https://api.macroinvertebrate.org/v1/identify
PURDUE_SOUNDSCAPES_API_URL=
PURDUE_SOUNDSCAPES_API_KEY=

# ===================================
# VERCEL (Only needed for local Vercel CLI)
# ===================================
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

